<h2>Register Your Office</h2>

<!-- Form creates OFFICE & office ADMIN user -->
<div class="col-md-4">
  <%= bootstrap_form_for @user, url: create_user_path do |f| %>
    <%= devise_error_messages! %>

    <%= f.fields_for :office do |office_form| %>
      <%= office_form.text_field :name %>
    <% end %>

    <%= f.text_field :name %>
    
    <%= f.email_field :email %>

    <%= f.password_field :password %>
    
    <%= f.password_field :password_confirmation %>

    <!-- Sets user to ADMIN with Office creation -->
    <%= f.hidden_field(:approved, value: true) %>
    <%= f.hidden_field(:admin, value: true) %>

    <button type="sumbit" class="input_btn" value="signup">Sign up</button><br><br>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
